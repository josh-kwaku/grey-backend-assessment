FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/bin/mock-provider ./cmd/mock-provider

FROM alpine:3.19

RUN apk --no-cache add ca-certificates
COPY --from=builder /app/bin/mock-provider /usr/local/bin/mock-provider

EXPOSE 8081
ENTRYPOINT ["mock-provider"]
