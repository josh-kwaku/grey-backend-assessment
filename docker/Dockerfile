FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/bin/api ./cmd/api

FROM alpine:3.19

RUN apk --no-cache add ca-certificates
COPY --from=builder /app/bin/api /usr/local/bin/api

EXPOSE 8080
ENTRYPOINT ["api"]
